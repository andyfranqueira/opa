@model List<OPA.Models.ValueSetViewModel>

@{
    ViewBag.Title = "Internal Values";
}

<h1>@ViewBag.Title</h1>
<hr />

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "values-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group clearfix">
        <div class="col-xs-3">
            <label class="control-label">Set</label>
        </div>
        <div class="col-xs-3">
            <label class="control-label">Option</label>
        </div>
        <div class="col-xs-2">
            <label class="control-label">Order</label>
        </div>
    </div>

    for (var i = 0; i < Model.Count; i++)
    {
        <div class="form-group clearfix">
            <div class="col-xs-3">
                @Html.HiddenFor(model => model[i].Id)
                @Html.EnumDropDownListFor(model => model[i].Set, new { @class = "form-control" })
            </div>

            <div class="col-xs-3">
                @Html.EditorFor(model => model[i].Option, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="col-xs-2">
                @Html.EditorFor(model => model[i].Order, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="col-xs-2">
                
            </div>
        </div>
    }

    <div class="form-group">
        <div class="pull-right">
            <input id="complete" type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}