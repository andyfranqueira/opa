<!DOCTYPE html>
<div class="container">
    <div id="header" class="navbar-header">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div id="logo">
                <a href="">
                    <img src="~/Content/images/logo-small.png" alt="Org Logo" />
                </a>
            </div>
            <div id="application-title">
                <p id="organization-name">@Html.ActionLink(Utilities.OrgName, "Index", "Home")</p>
                <p id="application-name">@Html.ActionLink(Utilities.AppName, "Index", "Home")</p>
            </div>
        </div>
        <div id="header-menu" class="navbar-collapse collapse">
            <div class="navbar-right">
                @if (Request.IsAuthenticated)
                {
                    <div class="clearfix pull-right">
                        <ul class="nav navbar-nav">
                            @if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Admin", "Index", "Home")</li>
                                <li><a href="@Utilities.DonorBoxUrl?email=@User.Identity.Name" class="custom-dbox-popup">Make a Donation</a></li>
                            }
                            <li>@Html.ActionLink("My Account", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage"})</li>
                            <li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                }
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>

        <div class="clearfix"></div>
    </div>
</div>
